{
  "info": {
    "name": "MedPharma API",
    "description": "Complete API collection for MedPharma virtual consultation system",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "doctor_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "patient_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/health",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Get All Doctors",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/api/auth/doctors",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Patient Registration",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('patient_token', response.token);",
                  "        pm.collectionVariables.set('auth_token', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/auth/register",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Smith\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"confirmPassword\": \"password123\",\n  \"phone\": \"+1 (555) 123-4567\",\n  \"dateOfBirth\": \"1990-01-15\",\n  \"emergencyContact\": \"+1 (555) 987-6543\"\n}"
            }
          }
        },
        {
          "name": "Patient Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('patient_token', response.token);",
                  "        pm.collectionVariables.set('auth_token', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/auth/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"userType\": \"patient\"\n}"
            }
          }
        },
        {
          "name": "Doctor Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.collectionVariables.set('doctor_token', response.token);",
                  "        pm.collectionVariables.set('auth_token', response.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{base_url}}/api/auth/login",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"dr.sarah@medpharma.com\",\n  \"doctorId\": \"DOC001\",\n  \"password\": \"doctor123\",\n  \"userType\": \"doctor\"\n}"
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{auth_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": "{{base_url}}/api/auth/me",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{auth_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "url": "{{base_url}}/api/auth/profile",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"phone\": \"+1234567890\"\n}"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{auth_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "url": "{{base_url}}/api/auth/logout",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Queue Management",
      "item": [
        {
          "name": "Join Queue (Patient)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{patient_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "url": "{{base_url}}/api/queue/join",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctorId\": \"DOC001\",\n  \"consultationType\": \"General Consultation\",\n  \"symptoms\": \"Fever and headache\",\n  \"urgencyLevel\": \"Normal\",\n  \"preferredTime\": \"Morning\"\n}"
            }
          }
        },
        {
          "name": "Get Queue Status",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{patient_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": "{{base_url}}/api/queue/status/DOC001",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Get My Queue Status",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{patient_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": "{{base_url}}/api/queue/my-status",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Leave Queue (Patient)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{patient_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "url": "{{base_url}}/api/queue/leave/DOC001",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Move Patient in Queue (Doctor)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{doctor_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "url": "{{base_url}}/api/queue/move",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"doctorId\": \"DOC001\",\n  \"entryId\": \"REPLACE_WITH_ACTUAL_ENTRY_ID\",\n  \"direction\": \"up\"\n}"
            }
          }
        },
        {
          "name": "Get Queue Stats (Doctor)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{doctor_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": "{{base_url}}/api/queue/stats",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Doctor Dashboard",
      "item": [
        {
          "name": "Get Doctor Dashboard",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{doctor_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": "{{base_url}}/api/appointments/doctor/dashboard",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Update Doctor Status",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{doctor_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "url": "{{base_url}}/api/appointments/doctor/status",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"availability\": \"Running Late\",\n  \"delayMinutes\": 15\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Consultations",
      "item": [
        {
          "name": "Start Consultation",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{doctor_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "url": "{{base_url}}/api/appointments/consultation/start",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientId\": \"REPLACE_WITH_QUEUE_ENTRY_ID\"\n}"
            }
          }
        },
        {
          "name": "End Consultation",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{doctor_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "url": "{{base_url}}/api/appointments/consultation/end",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientId\": \"REPLACE_WITH_QUEUE_ENTRY_ID\",\n  \"notes\": \"Patient consultation completed successfully\",\n  \"diagnosis\": \"Common cold\",\n  \"prescription\": \"Rest and fluids\",\n  \"followUpRequired\": false\n}"
            }
          }
        },
        {
          "name": "Get Active Consultation",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{auth_token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "url": "{{base_url}}/api/appointments/consultation/active",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Get Consultation History",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
