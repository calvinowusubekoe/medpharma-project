# MedPharma Backend Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=medpharma-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Database Configuration (for future MongoDB integration)
MONGODB_URI=mongodb://localhost:27017/medpharma
DB_NAME=medpharma

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# WebSocket Configuration
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# Security Configuration
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_DIRECTORY=uploads

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/medpharma.log
